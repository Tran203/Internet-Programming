<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CreateAccountServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.CreateAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchAccount</servlet-name>
        <servlet-class>za.ac.tut.controller.SearchAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayAccountsServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.DisplayAccountsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchAccountsUsingBalance</servlet-name>
        <servlet-class>za.ac.tut.controller.SearchAccountsUsingBalance</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateAccountServlet</servlet-name>
        <url-pattern>/CreateAccountServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchAccount</servlet-name>
        <url-pattern>/SearchAccount.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayAccountsServlet</servlet-name>
        <url-pattern>/DisplayAccountsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchAccountsUsingBalance</servlet-name>
        <url-pattern>/SearchAccountsUsingBalance.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
