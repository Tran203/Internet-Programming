<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StartSessionServelet</servlet-name>
        <servlet-class>za.ac.tut.contoller.StartSessionServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndSessionServlet</servlet-name>
        <servlet-class>za.ac.tut.contoller.EndSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDetailsServlet</servlet-name>
        <servlet-class>za.ac.tut.contoller.UserDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValueEntryServlet</servlet-name>
        <servlet-class>za.ac.tut.contoller.ValueEntryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartSessionServelet</servlet-name>
        <url-pattern>/StartSessionServelet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndSessionServlet</servlet-name>
        <url-pattern>/EndSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDetailsServlet</servlet-name>
        <url-pattern>/UserDetailsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValueEntryServlet</servlet-name>
        <url-pattern>/ValueEntryServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <exception-type>za.ac.tut.model.ArithmeticOperatorException</exception-type>
        <location>/Exceptions/arithmatic_operator_error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.NumberFormatException</exception-type>
        <location>/Exceptions/number_format_error.jsp</location>
    </error-page>
</web-app>
